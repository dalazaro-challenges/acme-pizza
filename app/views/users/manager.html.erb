<h2>Manager</h2>
<h3>View Order History</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Date Created</th>
      <th scope="col">Time Created</th>
      <th scope="col">Pickup Time</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Size</th>
      <th scope="col">Toppings</th>
      <th scope="col">Ready for Pickup?</th>
      <th scope="col">Delete Order</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.getlocal.strftime("%m-%d") %></td>
        <td><%= order.created_at.getlocal.strftime("%H:%M") %></td>
        <td><%= order.pickup[11..15] %></td>
        <td><%= order.name %></td>
        <td><%= order.phone.insert(0, '(').insert(4, ') ').insert(9, ' ') %></td>
        <td><%= order.size %></td>
        <td><%= order.toppings %></td>
        <td><%= is_ready(order.ready?) %></td>
        <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirm">Delete</button></td>
      </tr>

      <!-- Delete confirmation modal -->
        <div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteCollection" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteOrder">Delete Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                You are about to delete this order. Are you sure you want to do this?
              </div>
              <div class="modal-footer">
                <%= button_to "Delete", "/orders/#{order.id}", method: :delete, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </tbody>
</table>
